<form class="row g-3 needs-validation" action="/users/<%= currentUser._id %>/locations" method="POST" novalidate>
    <div class="col-md-12 mb-3">
        <label for="newLocation" class="form-label">New Location</label>
        <input name="newLocation" type="text" id="newLocation" class="form-control" minlength="3" maxlength="40" placeholder="New Location">
    </div>

    <button class="btn btn-success" type="submit">Add Location</button>
</div>
</form>
