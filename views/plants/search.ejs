<h1 class="text-success text-center mt-5 border-bottom pb-3">Search Plants</h1>


<section class="container my-5 text-center text-md-start">
  <div class="row">
    <div class="col-md">
      <h2 class="border-bottom pb-3">Search by name:</h2>
      <form action="/plants/search" method="GET">
          <div class="form-group my-4">
            <label style="font-size:1.5rem" for="CommonName">Common Name</label>
            <input class="form-control" type="text" name="CommonName" value="<%= searchOptions.CommonName %>" id="CommonName" placeholder="Enter Common Name">         
          </div>
          <div class="form-group my-4">
            <label style="font-size:1.5rem" for="BotanicalName">Botanical Name</label>
            <input class="form-control" type="text" name="BotanicalName" value="<%= searchOptions.BotanicalName %>" id="BotanicalName" placeholder="Enter Botanical Name">         
          </div>
          <button type="submit" class="w-100 btn btn-lg btn-success mb-3">Search</button>
        </form>
    </div>
    <div class="col-md col-md-3 my-5 text-md-center">
      <span class="h1">OR...</span>
    </div>
    <div class="col-md care-needs-search">
      <h2 class="border-bottom pb-3">Search by care needs:</h2>
      <form action="/plants/search" method="GET">
        <div>
          <fieldset class="my-4">
            <legend>Light:</legend>
              <label class="mx-3">
                <input type="radio" name="Light" value="low">
                <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor" class="bi bi-cloud" viewBox="0 0 16 16">
                  <title>Low-light: 25 ft-c to 75 ft-c</title>
