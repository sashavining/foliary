<h2>Search Plants</h2>
<h3>Seach by name:</h3>
<form action="/plants/search" method="GET">
  <div>
    <label>Common Name</label>
    <input type="text" name="CommonName" value="<%= searchOptions.CommonName %>">
  </div>
  <div>
    <label>Botanical Name</label>
    <input type="text" name="BotanicalName" value="<%= searchOptions.BotanicalName %>">
  </div>
  <button type="submit">Search</button>
</form>

<h3>Search by care needs:</h3>
<form action="/plants/search" method="GET">
  <div>
    <fieldset>
      <legend>Light needs:</legend>
        <input type="radio" id="light0" name="light" value="0">
        <label for="light0">Low Light (25 ft-c to 75 ft-c)</label>
        <input type="radio" id="light1" name="light" value="1">
        <label for="light1">Medium Light (75 ft-c to 200 ft-c)</label>
        <input type="radio" id="light2" name="light" value="2">
        <label for="light2">High Light (Over 200 ft-c, but not direct sun)</label>
        <input type="radio" id="light3" name="light" value="3">
        <label for="light3">Sunny Light (At least 4 hours of direct sun)</label>
    </fieldset>
  </div>
  <div>
    <fieldset>
      <legend>Temperature:</legend>
      <input type="radio" id="temperature0" name="temperature" value="0">
      <label for="temperature0">Cool: 50°F night, 65°F day temperatures</label> 
        <input type="radio" id="temperature1" name="temperature" value="1">
        <label for="temperature1">Average: 65°F night, 75°F day temperatures</label>
        <input type="radio" id="temperature2" name="temperature" value="2">
        <label for="temperature2">Warm: 70°F night, 85°F day temperatures</label>
    </fieldset>
  </div>
  <div>
    <fieldset>
      <legend>Humidity:</legend>
        <input type="radio" id="humidity0" name="humidity" value="0">
        <label for="humidity0">Low: 5% to 24%</label>
        <input type="radio" id="humidity1" name="humidity" value="1">
        <label for="humidity1">Average: 25% to 49% </label>
        <input type="radio" id="humidity2" name="humidity" value="2">
        <label for="humidity2">High: 50% or higher</label>
    </fieldset>
  </div>
  <div>
    <fieldset>
      <legend>Water:</legend>
        <input type="radio" id="water0" name="water" value="0">
        <label for="water0">Soil mix can become moderately dry before re-watering</label>
        <input type="radio" id="water1" name="water" value="1">
        <label for="water1">Surface of soil mix should dry before re-watering</label>
        <input type="radio" id="water2" name="water" value="2">
        <label for="water2">Keep soil mix moist</label>
    </fieldset>
  </div>
  <div>
    <fieldset>
      <legend>Soil Mix:</legend>
        <input type="radio" id="soil0" name="soil" value="0">
        <label for="soil0">Flowering house plants</label>
        <input type="radio" id="soil1" name="soil" value="1">
        <label for="soil1">Foliage plants</label>
        <input type="radio" id="soil2" name="soil" value="2">
        <label for="soil2">Bromeliads</label>
        <input type="radio" id="soil3" name="soil" value="3">
        <label for="soil3">Orchids</label>
        <input type="radio" id="soil4" name="soil" value="4">
        <label for="soil4">Succulents and cacti</label> 
        <input type="radio" id="soil5" name="soil" value="5">
        <label for="soil5">Ferns</label> 
        <input type="radio" id="soil6" name="soil" value="6">
        <label for="soil6">African violets and other Gesneriads</label> 
    </fieldset>
  </div>
  <button type="submit">Search</button>
</form>
<div>
  <% plants.forEach((plant, index) => { %>
    <a href="/plants/<%= plant._id %>">
      <%- plantsImageTags[index] %>
    </a>
  <% }) %>
</div>